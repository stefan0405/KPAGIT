<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>JerseyWebApplication</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>studentRest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>obavestenje</servlet-name>
        <servlet-class>Servlet.obavestenjeSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lokacije</servlet-name>
        <servlet-class>Servlet.lokacijeSERVLET</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyWebApplication</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.RestAuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>spi</servlet-name>
        <servlet-class>Servlet.SpiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prakticna</servlet-name>
        <servlet-class>Servlet.PrakticnaSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reset</servlet-name>
        <servlet-class>Servlet.resetSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>skat</servlet-name>
        <servlet-class>Servlet.SkatSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>student</servlet-name>
        <servlet-class>Servlet.StudentSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>molbe</servlet-name>
        <servlet-class>Servlet.MolbeSERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ADDMolbe</servlet-name>
        <servlet-class>Servlet.MolbeADDSERVLET</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spi</servlet-name>
        <url-pattern>/spi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prakticna</servlet-name>
        <url-pattern>/prakticna</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reset</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>skat</servlet-name>
        <url-pattern>/skat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>student</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>molbe</servlet-name>
        <url-pattern>/molbe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ADDMolbe</servlet-name>
        <url-pattern>/addMolbe</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>obavestenje</servlet-name>
        <url-pattern>/obavestenje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lokacije</servlet-name>
        <url-pattern>/lokacije</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/pnf.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/index.jsp</location>
    </error-page>
</web-app>
